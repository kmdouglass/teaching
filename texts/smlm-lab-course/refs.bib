	journal = {Nature Protocols},
	author = {van de Linde, Sebastian and Löschberger, Anna and Klein, Teresa and Heidbreder, Meike and Wolter, Steve and Heilemann, Mike and Sauer, Markus},
	month = jul,
	year = {2011},
	note = {Number: 7
Publisher: Nature Publishing Group},
	keywords = {smlm-course},
	pages = {991--1009},
	file = {Full Text PDF:C\:\\Users\\douglass\\Zotero\\storage\\KCL4GE35\\van de Linde et al. - 2011 - Direct stochastic optical reconstruction microscop.pdf:application/pdf},
